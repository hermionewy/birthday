.graphic__ui
	position relative

.ui__step
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	opacity 0
	transition opacity 250ms ease-in-out
	pointer-events none
	&.is-visible
		opacity 1
		pointer-events auto
	&.instant
		transition none

	button
		display block
		position absolute
		bottom 0.5rem
		left 50%
		width 16rem
		padding 0.5rem 0
		transform translateX(-50%)
		background-color white
		font-weight 600
		border 1px solid $gray-light
		transition all 150ms ease-in-out
		cursor pointer
		background-color rgba($yellow, 0.67)
		opacity 1
		box-shadow 0 2px 4px rgba($off-black, 0.33)
		animation rainbow 3s infinite
		&.is-hidden
			opacity 0
		&:disabled
			background-color transparent
			cursor default
			animation none
			&:hover
				background-color rgba($gray-light, 0.5)
		&:hover
			background-color rgba($yellow, 1)
			box-shadow 0 2px 4px rgba($off-black, 0.33), 0 4px 4px rgba($off-black, 0.33)

	.dropdown
		position relative
		top 20%
		margin 0 auto
		text-align center
		select
			background-color transparent
			border none
			border 1px solid $gray
			border-radius 0
			outline 0
			set-type-size(small, false)
			// text-align-last center

	.slider
		top 20%

@keyframes rainbow 
	0%
		background-color $yellow
	25%
		background-color #fff
	50%
		background-color $yellow
	100%
		background-color $yellow