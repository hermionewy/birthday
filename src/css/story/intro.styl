.text__step.text__step--intro
	top 0
	// bottom 0
	transform translate(0, 50%)
	&.is-visible
		transform translate(0, 50%)
	&.is-exit
		transform translate(-100%, 50%)
	p
		set-type-size('root', true)
		+mq('bp-desktop')
			set-type-size('medium', true)

	.intro
		&__hed
			margin 0 auto
			font-weight 600
			text-align center
			color $primary
			text-transform uppercase
			set-type-size('xx-large', true)
			+mq('bp-2')
				set-type-size('xxx-large', true)
			span
				letter-spacing 0.05em
			.birthday span
				&:nth-child(6n+1)
					color $red
				&:nth-child(6n+2)
					color $orange
				&:nth-child(6n+3)
					color $yellow
				&:nth-child(6n+4)
					color $green
				&:nth-child(6n+5)
					color $blue
				&:nth-child(6n+6)
					color $violet
			.paradox span
				&:nth-child(6n+1)
					color $yellow
				&:nth-child(6n+2)
					color $green
				&:nth-child(6n+3)
					color $blue
				&:nth-child(6n+4)
					color $violet
				&:nth-child(6n+5)
					color $red
				&:nth-child(6n+6)
					color $orange
			.birthday, .paradox
				display inline-block
				text-shadow 0 0 2px $off-black
			.above
				display block
				color $gray-light
				text-shadow 0 0 1px $off-black
				set-type-size('root', false)
				+mq('bp-3')
					set-type-size('large', false)
			.below
				display block
				margin-top 0.5rem
				color $gray-light
				text-shadow 0 0 1px $off-black
				set-type-size('root', false)
				+mq('bp-3')
					set-type-size('large', false)
			
		&__byline
			max-width $column-width
			margin 0 auto
			padding-top 1.5rem
			text-align center
			set-type-size('small', true)
			
		&__dek
			max-width $column-width
			margin 0 auto
			padding-top 1.5rem
			text-align center
			set-type-size('medium', true)