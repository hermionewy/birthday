/* CUSTOM STORY STYLE */
main
	overflow hidden
.graphic
	width 100%
	height 100%
	display flex
	flex-direction column
	// background yellow //debug
	padding 1rem
	padding-top 64px
	&__text
		// background red //debug
		width 100%
		height 100%
		max-width 50rem
		margin 0 auto
	&__chart
		// background green //debug
		position relative
		height 16rem
		max-width 70rem
		margin 0 auto
		.chart__timeline, .chart__canvas, .chart__svg
			transition opacity 1s ease-in-out
			opacity 0
		&.is-visible
			.chart__timeline, .chart__canvas, .chart__svg
				opacity 1
			
	&__ui
		// background blue //debug
		width 100%
		height 67%
		max-width 40rem
		margin 0 auto
		transition height 500ms ease-in-out
		&.is-short
			height 20%
	
.chart
	&__canvas
		display block
		width 100%
		height 4rem
		// background rgb(0,250,0) //debug
	&__svg
		display block
		width 100%
		height 10rem
		position relative
		svg
			position absolute
			top 0
			left 0
			width 100%
			height 100%
		// background rgb(0,200,0) //debug
	&__timeline
		width 100%
		height 2rem
		// background rgb(0,150,0) //debug
	&__balloon
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		transform translateY(-6rem)
		// background rgb(0,100, 0) // debug
	
.svg__label
	.label
		opacity 0
		transition opacity 250ms ease-in-out
		&.is-visible
			opacity 1

		.id
			set-type-size(xx-small, false)
			text-transform uppercase
			letter-spacing 0.05em
			fill $gray

		.date
			set-type-size(xx-small, false)
			text-transform uppercase
			letter-spacing 0.05em
			fill $gray-dark
			font-weight 600
			opacity 0
			transition opacity 250ms ease-in-out
			&.is-visible
				opacity 1

		line
			stroke $gray

.chart__balloon
	p
		display block
		position absolute
		margin 0
		padding 0
		width 2rem
		font-size 2rem
		line-height 1
		text-align center
		top 14rem
		left 0
		transform translateX(-50%)
		opacity 0
		&.is-float
			animation float 1s ease-in forwards

@keyframes float
	0%
		opacity 0
		transform translate(-50%, 0)
	33%
		opacity 1
	67%
		opacity 1
	100%
		opacity 0
		transform translate(-50%, -12rem)

svg text
	font-family $sans