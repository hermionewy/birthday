{{#each copy.steps}}
<div class='step text__step text__step--{{id}} {{class}}' data-id={{id}}>
	{{#if intro}}
		{{> story/intro}}
	{{else if appendix}}
		 {{> story/appendix}}
	{{else if recirc}}
		{{> story/recirc}}
	{{else if double}}
		{{> story/conclusion}}
	{{else}}
	<p>{{{text}}}</p>
	{{/if}}
</div>
{{/each}}